<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>URL Shortner</title>
</head>
<body>
    <h1 style="margin-left: 45%"  >Url Shortner</h1>
    <form style="margin-left: 45%" action="/short" method="POST">
        <input type="url" name="fullurl">
        <button type="submit">Submit</button>
    </form>
    <div class="row">
        <div class="col-md-6 offset-md-3" style="background-color: #fff;margin-top: 25px;padding:20px;">
    
            <table class="table table-striped" style="background: rgb(212, 208, 208);">
                <thead>
                    <tr>
                        <th>fullurl</th>
                        <th>shortid</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% shortdata.forEach(data=> { %>
                        <tr>
                            <td>
                                <a href="<%=data.full%>"target="_blank"><%=data.full%></a>
                            </td>
                            <td>
                                <a href="/shortid/<%=data.short%>"target="_blank"><%=data.short%></a>
                            </td>
                            <td>
                                <a href="/delete/<%=data.short%>">Delete</a>
                            </td>
                        </tr>
                        <%})%>
                </tbody>
            </table>
        </div>
    </div>
    

    <!-- <h2>hoyaa</h2> -->
</body>
</html>